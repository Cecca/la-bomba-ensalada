segment := segment_id <ws*> <'='> <ws*> <'{'> segment_body <'}'>

segment_id := #'[IVX]+'

segment_body := <ws*> body_element <ws*> body_element*

<body_element> := redundant_time_sig | time_sig | spacers | bar_check

redundant_time_sig := '% redundant' <ws*> time_sig

time_sig := '\\time ' #'\d/\d'

<spacers> := spacer <ws*> spacers*

spacer := #'s\d\.?(\*\d+)?'

bar_check := #'\\barNumberCheck\s+#\d+' <ws*>

<ws> := #'\s'
